using System;
using System.Collections.Generic;
using System.Diagnostics;


class Program
{
    static void Main(string[] args)
    {
        Stopwatch bubbelstoppur = new Stopwatch();
        Stopwatch insertionstoppur = new Stopwatch();
        int antalnummer = 100000;//Antalet tal som ska sorteras
        Console.WriteLine("Antal element: {0} ", antalnummer); 
        Random rnd = new Random(); 
        List<int> tallista = new List<int>(); // Här skapas en lista med slumptal.
        for (int i = 0; i < antalnummer; i++)//
        {
            tallista.Add(rnd.Next(10));
           // Console.WriteLine(tallista[i]);
        }

        //Här sorteras listan med bubblesort.
        bubbelstoppur.Start();
        for (int i = 1; i < antalnummer; i++)
        {
            for (int j = 0; j < (antalnummer - i); j++)
            {
                if (tallista[j] > tallista[j + 1])
                {
                    int temp = tallista[j];
                    tallista[j] = tallista[j + 1];
                    tallista[j + 1] = temp;
                }
                
            }
        }
        bubbelstoppur.Stop();
       
      /*  Console.WriteLine("Sorterad med bubblesort i stigande ordning ");
        for (int k = 0; k < antalnummer; k++)
        {
            Console.WriteLine(tallista[k]);
        }*/
        Random slump = new Random();
      //  Console.WriteLine("Ny lista med slumptal ");
        int[] tallista2 = new int[antalnummer];//Skapat en tom array av heltal 
        for (int i = 0; i < antalnummer; i++)
        {
            tallista2[i] = slump.Next(10);
           // Console.WriteLine(tallista2[i]);
        }
        
        int tmp, minst;
        insertionstoppur.Start();
        for (int y = 0; y < antalnummer; y++)// Här börjar den sortera med insertionsort
        {
            minst = y;
            for (int m = y + 1; m < antalnummer; m++)
            {
                if (tallista2[m] < tallista2[minst])
                {
                    minst = m;
                }
            }
            tmp = tallista2[minst];
            tallista2[minst] = tallista2[y];
            tallista2[y] = tmp;
        }
        insertionstoppur.Stop();
      /*  Console.WriteLine("Sorterad lista med selection sort ");
        for (int y = 0; y < antalnummer; y++) 
        {
            Console.WriteLine(tallista2[y] + " ");
        }*/
        Console.WriteLine("Tid för bubbelsortering: {0} ", bubbelstoppur.Elapsed);
        Console.WriteLine("Tid för insertionsortering: {0} ", insertionstoppur.Elapsed);
    }

}

//Selectionsort ineffektiv för större mängder data http://cforbeginners.com/CSharp/SelectionSort.html
